<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppBgColor">#FF0F1115</Color>
    <Color x:Key="CardBgColor">#FF161A22</Color>
    <Color x:Key="TextColor">#FFE8EAF0</Color>
    
    <SolidColorBrush x:Key="AppBg" Color="{StaticResource AppBgColor}" />
    <SolidColorBrush x:Key="CardBg" Color="{StaticResource CardBgColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
</ResourceDictionary>